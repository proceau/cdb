{
	"name": "wikimedia/cdb",
	"description": "Constant Database (CDB) wrapper library for PHP. Provides pure-PHP fallback when dba_* functions are absent.",
	"license": "GPL-2.0-or-later",
	"homepage": "https://www.mediawiki.org/wiki/CDB",
	"authors": [
		{
			"name": "Tim Starling",
			"email": "tstarling@wikimedia.org"
		},
		{
			"name": "Chad Horohoe",
			"email": "chad@wikimedia.org"
		},
		{
			"name": "Ori Livneh",
			"email": "ori@wikimedia.org"
		},
		{
			"name": "Daniel Kinzler"
		}
	],
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"require": {
		"php": ">=7.2.9"
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "1.0.0",
		"jakub-onderka/php-console-highlighter": "0.4.0",
		"mediawiki/mediawiki-codesniffer": "30.0.0",
		"mediawiki/minus-x": "1.0.0",
		"ockcyp/covers-validator": "1.1.1",
		"phpunit/phpunit": "^8.5"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"covers-validator",
			"phpcs -sp",
			"minus-x check ."
		],
		"cover": "phpunit --coverage-html coverage",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	}
}
